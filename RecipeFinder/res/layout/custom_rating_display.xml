<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RatingBar
        android:id="@+id/custRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp" />

    <Button
        android:id="@+id/ratingAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ratingClose"
        android:layout_alignBottom="@+id/ratingClose"
        android:layout_alignRight="@+id/custRatingBar"
        android:text="Rate It!!" />

    <Button
        android:id="@+id/ratingClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custRatingBar"
        android:layout_below="@+id/custRatingBar"
        android:layout_marginTop="74dp"
        android:text="Close" />

</RelativeLayout>