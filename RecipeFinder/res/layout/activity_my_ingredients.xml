<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyIngredientsActivity" >

    <RelativeLayout
        android:id="@+id/addBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/quantityItem"
            android:layout_alignBottom="@+id/quantityItem"
            android:layout_alignParentRight="true"
            android:onClick="addClicked"
            android:text="Add" />

        <EditText
            android:id="@+id/quantityItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ingredientItem"
            android:layout_toLeftOf="@+id/add"
            android:ems="10"
            android:hint="Quantity"
            android:inputType="numberDecimal" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/ingredientItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/quantityItem"
            android:ems="10"
            android:hint="Enter an ingredient" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listOfIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/changesBar"
        android:layout_below="@+id/addBar"
        android:choiceMode="multipleChoice" >
    </ListView>

    <RelativeLayout
        android:id="@+id/changesBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="searchClicked"
            android:text="Search"
            android:textSize="13sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/search"
            android:layout_toLeftOf="@+id/search"
            android:onClick="deleteClicked"
            android:text="Delete"
            android:textSize="13sp" />

        <Button
            android:id="@+id/minus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="minusClicked"
            android:text="-" />

        <Button
            android:id="@+id/changeQuantity"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/minus"
            android:onClick="changeQuantity"
            android:text="change quantity"
            android:textSize="13sp" />

        <Button
            android:id="@+id/plus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/changeQuantity"
            android:onClick="plusClicked"
            android:text="+" />
    </RelativeLayout>

</RelativeLayout>