<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyIngredientsActivity" >

    <Button
        android:id="@+id/minus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listOfIng"
        android:onClick="minusClicked"
        android:text="minus" />

    <Button
        android:id="@+id/plus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listOfIng"
        android:layout_toLeftOf="@+id/minus"
        android:onClick="plusClicked"
        android:text="plus" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quantityItem"
        android:layout_alignBottom="@+id/quantityItem"
        android:layout_alignParentRight="true"
        android:onClick="addClicked"
        android:text="add_PH" />

    <ListView
        android:id="@+id/listOfIng"
        android:layout_width="wrap_content"
        android:layout_height="238dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/add"
        android:choiceMode="multipleChoice" >
    </ListView>

    <Button
        android:id="@+id/backButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="backClicked"
        android:text="back_PH" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/minus"
        android:onClick="searchClicked"
        android:text="search_PH" />

    <EditText
        android:id="@+id/quantityItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ingredientItem"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ingredientItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter an ingredient" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/plus"
        android:onClick="deleteClicked"
        android:text="delete_PH" />

</RelativeLayout>