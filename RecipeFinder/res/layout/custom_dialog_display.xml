<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/imgDeleteButton"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imgCancelButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:background="@drawable/regbutton"
        android:text="Delete"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/imgCancelButton"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_below="@+id/enlargedImage"
        android:layout_marginLeft="60dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/regbutton"
        android:text="Cancel"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/enlargedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:minHeight="300dp"
        android:minWidth="300dp" />

</RelativeLayout>