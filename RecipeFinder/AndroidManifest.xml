<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team13.cmput301.recipefinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="team13.cmput301.recipefinder.activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.CreateRecipeActivity"
            android:label="@string/title_activity_create_recipe"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.MyIngredientsActivity"
            android:label="@string/title_activity_my_ingredients"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.RecipesActivity"
            android:label="@string/title_activity_recipes"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.SearchResultsActivity"
            android:label="@string/title_activity_search_results"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.DisplayRecipeActivity"
            android:label="@string/title_activity_display_recipe"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.SearchRecipeActivity"
            android:label="@string/title_activity_search_recipe"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.RecipeListActivity"
            android:label="@string/title_activity_recipe_list"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.activities.FirstTimeUserActivity"
            android:label="@string/title_activity_first_time_user"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>