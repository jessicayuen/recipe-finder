<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team13.cmput301.recipefinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="team13.cmput301.recipefinder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.CreateRecipeActivity"
            android:label="@string/title_activity_create_recipe" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.MyIngredientsActivity"
            android:label="@string/title_activity_my_ingredients" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.RecipesActivity"
            android:label="@string/title_activity_recipes" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.DisplayRecipeActivity"
            android:label="@string/title_activity_display_recipe" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.SearchRecipeActivity"
            android:label="@string/title_activity_search_recipe" >
        </activity>
        <activity
            android:name="team13.cmput301.recipefinder.RecipeListActivity"
            android:label="@string/title_activity_recipe_list" >
        </activity>
    </application>

</manifest>